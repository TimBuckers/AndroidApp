<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="apps.myapplication.PostGameActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonAgain"
        android:alpha="0.8"
        android:text="Play again"
        android:textColor="@android:color/white"
        android:background="@drawable/button_custom"
        android:onClick="playAgain"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="67dp"
        android:layout_marginStart="67dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonStop"
        android:alpha="0.8"
        android:text="Exit"
        android:textColor="@android:color/white"
        android:background="@drawable/button_custom"
        android:onClick="goToHomeScreen"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/imageButtonAgain"
        android:layout_toRightOf="@+id/imageButtonAgain"
        android:layout_toEndOf="@+id/imageButtonAgain" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/scorePB"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_above="@+id/imageButtonStop"
        android:layout_toRightOf="@+id/scorePA"
        android:layout_toEndOf="@+id/scorePA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/scorePA"
        android:layout_alignTop="@+id/scorePB"
        android:layout_alignRight="@+id/imageButtonAgain"
        android:layout_alignEnd="@+id/imageButtonAgain"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp" />


</RelativeLayout>
