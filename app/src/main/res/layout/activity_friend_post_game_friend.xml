<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="apps.myapplication.FriendPostGameActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonAgain"
        android:alpha="0.8"
        android:text="Play again"
        android:textColor="@android:color/white"
        android:background="@drawable/button_custom"
        android:onClick="playAgain"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="188dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonStop"
        android:alpha="0.8"
        android:text="Exit"
        android:textColor="@android:color/white"
        android:background="@drawable/button_custom"
        android:onClick="goToHomeScreen"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/imageButtonSelectLevel"
        android:layout_toRightOf="@+id/scorePA"
        android:layout_toEndOf="@+id/scorePA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/scorePB"
        android:layout_alignBottom="@+id/imageButtonAgain"
        android:layout_toRightOf="@+id/imageButtonStop"
        android:layout_toEndOf="@+id/imageButtonStop"
        android:layout_marginBottom="95dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/scorePA"
        android:layout_alignBaseline="@+id/scorePB"
        android:layout_alignBottom="@+id/scorePB"
        android:layout_toLeftOf="@+id/imageButtonAgain"
        android:layout_toStartOf="@+id/imageButtonAgain" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonSelectLevel"
        android:alpha="0.8"
        android:text="Select Level"
        android:textColor="@android:color/white"
        android:background="@drawable/button_custom"
        android:onClick="selectLevel"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/imageButtonAgain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />


</RelativeLayout>
