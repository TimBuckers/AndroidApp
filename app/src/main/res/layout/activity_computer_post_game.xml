<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="apps.myapplication.FriendPostGameActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonAgain"
        android:alpha="0.8"
        android:text="Play again"
        android:textColor="@android:color/white"
        android:background="@drawable/button_custom"
        android:onClick="playAgain"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/scorePB"
        android:layout_alignLeft="@+id/imageButtonStop"
        android:layout_alignStart="@+id/imageButtonStop" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonStop"
        android:alpha="0.8"
        android:text="Exit"
        android:textColor="@android:color/white"
        android:background="@drawable/button_custom"
        android:onClick="goToHomeScreen"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/imageButtonSelectDifficulty"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/scorePB"
        android:layout_marginTop="134dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/scorePA"
        android:layout_above="@+id/imageButtonAgain"
        android:layout_toLeftOf="@+id/imageButtonAgain"
        android:layout_toStartOf="@+id/imageButtonAgain" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonSelectLevel"
        android:alpha="0.8"
        android:text="Select Level"
        android:textColor="@android:color/white"
        android:background="@drawable/button_custom"
        android:onClick="selectLevel"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/imageButtonAgain"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonSelectDifficulty"
        android:alpha="0.8"
        android:text="Select Difficulty"
        android:textColor="@android:color/white"
        android:background="@drawable/button_custom"
        android:onClick="selectDifficulty"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/imageButtonSelectLevel"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Boe"
        android:id="@+id/winner"
        android:layout_marginTop="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageButtonAgain"
        android:layout_alignEnd="@+id/imageButtonAgain" />


</RelativeLayout>
